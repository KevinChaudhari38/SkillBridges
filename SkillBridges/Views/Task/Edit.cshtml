@model SkillBridges.ViewModels.TaskEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4>TaskEditViewModel</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="ClientProfileId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Budjet" class="form-label"></label>
                <input asp-for="Budjet" class="form-control" />
                <span asp-validation-for="Budjet" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Deadline" class="form-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            

            <div class="d-grid mt-3">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" asp-route-clientId="@Model.ClientProfileId" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
