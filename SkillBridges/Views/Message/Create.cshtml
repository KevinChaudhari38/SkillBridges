@model SkillBridges.ViewModels.TaskMessageCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskMessage</h4>
<hr />
<div class="row task-message-create-row">
    <div class="col-md-4 task-message-create-col">
        <form asp-action="Create" class="task-message-create-form">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="SenderId" />
            <input type="hidden" asp-for="ReceiverId" />
            <input type="hidden" asp-for="SenderRole" />

            <div class="form-group task-message-input-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control task-message-input" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group task-message-submit-group">
                <input type="submit" value="Create" class="btn btn-primary task-message-submit" />
            </div>
        </form>
    </div>
</div>

<div class="task-message-back-link">
    <a asp-action="Index" asp-route-TaskId="@Model.TaskId" asp-route-ViewerId="@Model.SenderId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
