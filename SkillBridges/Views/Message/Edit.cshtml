@model SkillBridges.ViewModels.TaskMessageViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MessageId"/>
            <input type="hidden" asp-for="TaskTitle"/>
            <input type="hidden" asp-for="SenderId"/>
            <input type="hidden" asp-for="ReceiverId"/>
            <input type="hidden" asp-for="ReceiverName"/>
            <input type="hidden" asp-for="SentAt" />
            <input type="hidden" asp-for="IsRead"/>
            
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
