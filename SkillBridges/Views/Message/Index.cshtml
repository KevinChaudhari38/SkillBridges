@model SkillBridges.ViewModels.TaskConversationViewModel

@{
    ViewData["Title"] = "Task Conversation";
}

<h1 class="mb-3">Task Conversation</h1>
<h4 class="mb-4">Messages</h4>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="mb-3">
    @if (Model.Role == "Client")
    {
        <a asp-action="Create"
           asp-route-id="@Model.TaskId"
           asp-route-senderId="@Model.ClientProfileId"
           asp-route-receiverId="@Model.ProfessionalProfileId"
           class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    }
    else
    {
        <a asp-action="Create"
           asp-route-id="@Model.TaskId"
           asp-route-senderId="@Model.ProfessionalProfileId"
           asp-route-receiverId="@Model.ClientProfileId"
           class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    }
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>MessageId</th>
            <th>TaskTitle</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Message</th>
            <th>Sent At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Messages)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.TaskTitle</td>
                <td>@item.SenderName</td>
                <td>@item.ReceiverName</td>
                <td>@item.Message</td>
                <td>@item.SentAt</td>
                <td>
                    @if (item.IsRead)
                    {
                        <span class="badge bg-success">Read</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Unread</span>
                    }
                </td>
                <td>
                    @if ((Model.Role == "Client" && item.SenderId == Model.ClientProfileId) ||
                                    (Model.Role == "Professional" && item.SenderId == Model.ProfessionalProfileId))
                    {
                        <a asp-action="Edit"
                           asp-route-id="@item.MessageId"
                           asp-route-SenderId="@(Model.Role == "Client" ? Model.ClientProfileId : Model.ProfessionalProfileId)"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>
                        <a asp-action="Delete"
                           asp-route-id="@item.MessageId"
                           asp-route-SenderId="@(Model.Role == "Client" ? Model.ClientProfileId : Model.ProfessionalProfileId)"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Not your message</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
