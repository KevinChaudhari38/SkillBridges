@model SkillBridges.ViewModels.TaskConversationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h4>TaskMessageViewModel</h4>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
@if (@Model.Role == "Client")
{
    <p>
        <a asp-action="Create" asp-route-id="@Model.TaskId" asp-route-senderId="@Model.ClientProfileId" asp-route-receiverId="@Model.ProfessionalProfileId">Create New</a>
    </p>
}
else
{
    <p>
        <a asp-action="Create" asp-route-id="@Model.TaskId" asp-route-senderId="@Model.ProfessionalProfileId" asp-route-receiverId="@Model.ClientProfileId">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                MessageId
            </th>
            <th>
                TaskTitle
            </th>
            <th>
                SenderName
            </th>
            <th>
                ReceiverName
            </th>
            <th>
                Message
            </th>
            <th>
                SentAt
            </th>
            <th>
                IsRead
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Messages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRead)
                </td>
                <td>
                    @if ((Model.Role == "Client" && item.SenderId == Model.ClientProfileId) ||
                                    (Model.Role == "Professional" && item.SenderId == Model.ProfessionalProfileId))
                    {
                        <a asp-action="Edit"
                           asp-route-id="@item.MessageId"
                           asp-route-SenderId="@(Model.Role == "Client" ? Model.ClientProfileId : Model.ProfessionalProfileId)">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MessageId" asp-route-SenderId="@(Model.Role == "Client" ? Model.ClientProfileId : Model.ProfessionalProfileId)">Delete</a>
                               
                     }
                    else
                    {
                        <span class="text-muted">Not your message</span>
                    }
                </td>



            </tr>
        }
    </tbody>
</table>
