
@model IEnumerable<WorkSubmission>

@{
    ViewData["Title"] = "Work Submissions";
}

<h1 class="mb-4">Work Submissions</h1>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.WorkSubmissionId)</th>
            <th>@Html.DisplayNameFor(model => model.TaskId)</th>
            <th>@Html.DisplayNameFor(model => model.ProfessionalProfileId)</th>
            <th>@Html.DisplayNameFor(model => model.Notes)</th>
            <th>@Html.DisplayNameFor(model => model.FilePath)</th>
            <th>@Html.DisplayNameFor(model => model.SubmittedAt)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.WorkSubmissionId)</td>
                <td>@Html.DisplayFor(modelItem => item.TaskId)</td>
                <td>@Html.DisplayFor(modelItem => item.ProfessionalProfileId)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.FilePath))
                    {
                        <a href="@item.FilePath" target="_blank" class="btn btn-link btn-sm">Download</a>
                    }
                    else
                    {
                        <span class="text-muted">No File</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.SubmittedAt)</td>
                <td>
                    @if (item.Status == WorkStatus.UnderSupervision)
                    {
                        <span class="text-warning">Under Supervision</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Status)
                    }
                </td>
                <td>
                    @if (item.Status == WorkStatus.UnderSupervision)
                    {
                        <a asp-controller="Work" asp-action="Accept" asp-route-WorkSubmissionId="@item.WorkSubmissionId" class="btn btn-success btn-sm me-1">Accept</a>
                        <a asp-controller="Work" asp-action="Reject" asp-route-WorkSubmissionId="@item.WorkSubmissionId" class="btn btn-danger btn-sm">Reject</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.WorkSubmissionId" class="btn btn-primary btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.WorkSubmissionId" class="btn btn-secondary btn-sm ms-1">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
