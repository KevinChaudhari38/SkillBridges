@model IEnumerable<SkillBridges.Models.WorkSubmission>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkSubmissionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessionalProfileId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
