
@model WorkSubmission

@{
    ViewData["Title"] = "Edit Work Submission";
}

<h1 class="mb-4">Edit Work Submission</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="WorkSubmissionId" />
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="ProfessionalProfileId" />

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="File" class="form-label">Upload Proof of Work (PDF)</label>
                <input type="file" name="File" accept="application/pdf" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>

            

            <div class="mb-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" asp-route-TaskId="@Model.TaskId" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
