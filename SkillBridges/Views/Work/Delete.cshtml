@model SkillBridges.Models.WorkSubmission

@{
    ViewData["Title"] = "Delete Work Submission";
}

<h1 class="mb-4">Delete Work Submission</h1>

<h5>Are you sure you want to delete this submission?</h5>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Submission ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkSubmissionId)</dd>

        <dt class="col-sm-3">Task ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskId)</dd>

        <dt class="col-sm-3">Professional ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProfessionalProfileId)</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

        <dt class="col-sm-3">File Path</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <a href="@Model.FilePath" target="_blank">Download File</a>
            }
            else
            {
                <span class="text-muted">No File</span>
            }
        </dd>

        <dt class="col-sm-3">Submitted At</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SubmittedAt)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="WorkSubmissionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-TaskId="@Model.TaskId" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
