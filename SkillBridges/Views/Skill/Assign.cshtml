@model SkillBridges.ViewModels.AssignSkillViewModel

@{
    ViewData["Title"] = "Assign";
}

<h1>Assign</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProfessionalProfileId" />

            <div class="form-group">
                <label for="skills">Select Skills</label>
                <select asp-for="SelectedSkillIds" class="form-control" multiple="multiple"
                        asp-items='@(
                        new MultiSelectList(
                            Model.AvailableSkills,
                            "SkillId",
                            "Name",
                            Model.SelectedSkillIds
                        )
                                                )'>
                </select>
                <span asp-validation-for="SelectedSkillIds" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
