@model SkillBridges.ViewModels.CategoryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <h4 class="text-center fw-semibold mb-4">Create Category</h4>
                <form asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="type" class="form-label fw-semibold"></label>
                        <select asp-for="type" class="form-select" asp-items="@Model.Types">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="type" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i> Create
                        </button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
