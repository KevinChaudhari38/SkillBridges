@model SkillBridges.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container vh-100 d-flex justify-content-center align-items-start mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h4 class="text-center fw-semibold mb-4">Delete User</h4>
            <h5 class="text-center mb-3">Are you sure you want to delete this?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 fw-semibold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-semibold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-semibold">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3 fw-semibold">Role</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>
            </dl>

            <div class="d-flex gap-2 justify-content-center">
                <form asp-action="Delete">
                    
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>
</div>
