@model SkillBridges.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - SkillBridge";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container vh-100 d-flex justify-content-center align-items-center">

    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h4 class="text-center fw-semibold mb-4">Login</h4>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-end mb-3">
                    <a asp-action="ForgotPassword" class="text-decoration-none fw-semibold text-primary">Forgot Password?</a>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">Login</button>
                </div>


                <div class="text-center mb-2">
                    <span class="text-muted">Don't have an account?</span>
                </div>
                <div class="d-grid">
                    <a asp-action="Create" class="btn btn-outline-primary btn-lg fw-semibold">Register Now</a>
                </div>

                @if (ViewBag.Message != null)
                {
                <div class="alert alert-success mt-3">
                    @ViewBag.Message
                </div>
                }
            </form>
            </div>

           
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
