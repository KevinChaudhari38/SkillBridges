@model SkillBridges.ViewModels.TaskApplicationViewModel

@{
    ViewData["Title"] = "Delete Task Application";
}

<h1 class="mb-4">Delete Task Application</h1>

<h3 class="mb-3">Are you sure you want to delete this application?</h3>

<div class="card p-3 mb-4">
    <h4>Task Application Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Application ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskApplicationId)</dd>

        <dt class="col-sm-3">Task ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskId)</dd>

        <dt class="col-sm-3">Task Title</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskTitle)</dd>

        <dt class="col-sm-3">Client</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ClientName) (@Html.DisplayFor(model => model.ClientProfileId))</dd>

        <dt class="col-sm-3">Professional</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProfessionalName) (@Html.DisplayFor(model => model.ProfessionalProfileId))</dd>

        <dt class="col-sm-3">Proposal</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Proposal)</dd>

        <dt class="col-sm-3">Expected Budget</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpectedBudjet)</dd>

        <dt class="col-sm-3">Applied At</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AppliedAt)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-3">File</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.File))
            {
                <a href="@Model.File" target="_blank" class="btn btn-link">View/Download</a>
            }
            else
            {
                <span class="text-muted">No File</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="TaskApplicationId" />
        <input type="hidden" asp-for="ClientProfileId" />
        <input type="hidden" asp-for="ProfessionalProfileId" />

        <input type="submit" value="Delete" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
